db.createCollection("courses", {
  validator: {
    $jsonSchema: {
      bsonType: "object",
      required: ["_id", "content", "name"],
      properties: {
        _id: {
          bsonType: "objectId"
        },
        content: {
          bsonType: "string"
        },
        name: {
          bsonType: "string"
        }
      }
    }
  }
});
